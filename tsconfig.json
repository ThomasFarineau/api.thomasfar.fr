{
  "compilerOptions": {
    "target": "ES2024",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@controllers/*": ["src/controllers/*"],
      "@services/*": ["src/services/*"]
    }
  }
}