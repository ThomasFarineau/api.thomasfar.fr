{
  "compilerOptions": {
    "target": "ES2024",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "baseUrl": "src",
    "paths": {
      "@services/*": [
        "services/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@decorators/*": [
        "decorators/*"
      ],
      "@helpers/*": [
        "helpers/*"
      ],
    }
  }
}